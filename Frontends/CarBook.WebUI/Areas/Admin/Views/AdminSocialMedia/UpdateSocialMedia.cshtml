@model UpdateSocialMediaDto
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Sosyal Medya Güncellemesi</h4>
                        <p class="card-subtitle mb-4">Sosyal Medya ile ilgili güncellemeleri bu kısımdan yapabilirsiniz.</p>
                        <form method="post">
                            <input type="hidden" asp-for="SocialMediaId"/>
                            <div class="form-group">
                                <label for="exampleInputName">Sosyal Medya Platformu</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUrl">URL</label>
                                <input type="text" class="form-control" id="exampleInputUrl" asp-for="Url">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputIcon">Sosyal Medya İkonu</label>
                                <input type="text" class="form-control" id="exampleInputIcon" asp-for="Icon">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>