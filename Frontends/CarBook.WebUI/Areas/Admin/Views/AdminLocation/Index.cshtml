@model List<ResultLocationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Lokasyon Bilgileri </h4>
                        <p class="card-subtitle mb-4">
                            Araçların alınış ve bırakılış noktalarını buradan belirleyebilirsiniz. Alt tarafta lokasyon bilgilerini görebilirsiniz. 
                            Sağ taraftaki buton üzerinden harita bilgisine ulaşım sağlayabilirsiniz.
                        </p>
                        <div class="table-responsive">
                            @if (Model.Count > 0)
                            {
                                <table class="table mb-0">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Lokasyon</th>
                                            <th>Sil</th>
                                            <th>Güncelle</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            count++;
                                            <tr>
                                                <td>@count</td>
                                                <td>@item.Name</td>
                                                <td><a href="/Admin/AdminLocation/RemoveLocation/@item.LocationID" class="btn btn-outline-danger">Sil</a></td>
                                                <td><a href="/Admin/AdminLocation/UpdateLocation/@item.LocationID" class="btn btn-outline-success">Güncelle</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <div class="alert alert-info">
                                    <p class="mb-0">Henüz hiçbir lokasyon eklenmedi!</p>
                                </div>
                            }
                            <a href="/Admin/AdminLocation/CreateLocation" class="btn btn-outline-primary">Yeni Lokasyon Girişi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>