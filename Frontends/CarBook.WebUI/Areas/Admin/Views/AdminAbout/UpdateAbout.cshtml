@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Hakkında Alanı Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">Hakkında bilgilerini güncelleyip kaydet butonuna tıklayınız.</p>
                        <form method="post">
                            <input type="hidden" asp-for="aboutId" />
                            <div class="form-group">
                                <label for="exampleInputTitle">Başlık</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="title">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription">Açıklama</label>
                                <textarea rows="5" class="form-control" asp-for="description"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputimageUrl">Görsel</label>
                                <input type="text" class="form-control" id="exampleInputimageUrl" asp-for="imageUrl">
                            </div>
                            <button type="submit" class="btn btn-success waves-effect waves-light">Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>