@model UpdateServiceDto
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Hizmet Veri Güncellemesi</h4>
                        <p class="card-subtitle mb-4">Hizmet veri güncellemesi işlemlerini bu kısımdan yapabilirsiniz.</p>
                        <form method="post">
                            <input type="hidden" asp-for="ServiceID"/>
                            <div class="form-group">
                                <label for="exampleInputTitle">Hizmet Başlığı</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription">Hizmet Açıklaması</label>
                                <input type="text" class="form-control" id="exampleInputDescription" asp-for="Description">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputIconUrl">Hizmet Icon-Url</label>
                                <input type="text" class="form-control" id="exampleInputIconUrl" asp-for="IconUrl">
                            </div>
                            <button type="submit" class="btn btn-success waves-effect waves-light">Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>